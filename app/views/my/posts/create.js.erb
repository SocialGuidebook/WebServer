<% if @post.errors.empty? %>
  $("#posts").prepend('<%= escape_javascript(render :partial => "shared/post", :locals => {:post => @post}) %>');
  $("#post_form").reset();
  $(".show_post_form").colorbox.close();
  $(".box").hide();
<% else %>
  $("#new_form").html("<%= escape_javascript(render :partial => 'my/dashboard/new_form') %>");
<% end %>
