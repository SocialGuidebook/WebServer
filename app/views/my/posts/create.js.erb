<% if @post.errors.empty? %>
  $("#posts").prepend('<%= escape_javascript(render :partial => "shared/#{@post.post_type.name.downcase}", :locals => {:post => @post}) %>');
  $("#post_form").reset();
<% else %>
  $("#new_form").html("<%= escape_javascript(render :partial => 'my/dashboard/new_form') %>");
<% end %>
